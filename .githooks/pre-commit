# Run API validation
if ! bun run validate-api; then
    echo ""
    echo "âŒ API Documentation validation failed!"
    echo "ğŸ” API documentation is not consistent with implementation."
    echo "ğŸ“‹ Check the validation reports in typescript/docs/api/reports/"
    echo "ğŸ› ï¸  Fix the issues or update API documentation to maintain 100% consistency."
    echo "ğŸš« Breaking API changes require explicit version bump (api-ts-v-2.0)."
    echo ""
    echo "ğŸ’¡ To bypass this check (not recommended): git commit --no-verify"
