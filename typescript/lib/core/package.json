{
  "name": "@qi/core",
  "version": "3.0.1",
  "description": "QiCore Foundation Core - Infrastructure services (Config, Logger, Cache) using Result<T> patterns",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "bun tsup",
    "clean": "bun rimraf dist",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "typecheck": "tsc --noEmit",
    "test": "vitest run ../tests/core/config.test.ts ../tests/core/logger.test.ts ../tests/core/cache.test.ts",
    "check": "bun run typecheck && biome format . && biome lint .",
    "test:config": "vitest run ../tests/core/config.test.ts",
    "build:config": "tsup src/config.ts --format esm --dts",
    "prepublishOnly": "bun run clean && bun run build"
  },
  "keywords": [
    "qicore",
    "foundation",
    "configuration",
    "logger",
    "cache",
    "infrastructure",
    "typescript"
  ],
  "author": "Qi Platform",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@qi/base": "file:../base",
    "dotenv": "^16.6.1",
    "eventemitter3": "^5.0.1",
    "ioredis": "^5.6.1",
    "pino": "^9.7.0",
    "smol-toml": "^1.4.1",
    "yaml": "^2.8.0",
    "zod": "^4.1.5",
    "zod-from-json-schema": "^0.5.0"
  },
  "devDependencies": {
    "rimraf": "^5.0.10",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^1.6.1"
  }
}
