{
  "name": "@qi/cli",
  "version": "2.2.0",
  "description": "QiCore CLI Framework - Message-driven CLI with hybrid terminal support",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": ["dist"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rimraf dist",
    "typecheck": "tsc --noEmit --pretty",
    "test": "echo 'No tests yet'",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "check": "bun run typecheck && bun run format:check && bun run lint && bun run test"
  },
  "dependencies": {
    "@qi/base": "file:../base",
    "@qi/core": "file:../core",
    "@qi/amsg": "file:../amsg",
    "chalk": "^5.3.0",
    "ink": "^4.4.1",
    "ink-text-input": "^5.0.1",
    "ink-gradient": "^3.0.0",
    "ink-big-text": "^2.0.0",
    "react": "^18.2.0",
    "xstate": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "react": "^18.0.0"
  },
  "keywords": ["qi", "cli", "terminal", "framework", "typescript", "functional"],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zhangzhonghe/qi-v2-qicore.git",
    "directory": "typescript/lib/cli"
  },
  "license": "MIT"
}
