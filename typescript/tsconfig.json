{
  "compilerOptions": {
    "target": "ES2023",
    "lib": ["ES2023", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "strict": true,
    "composite": true,
    "exactOptionalPropertyTypes": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "verbatimModuleSyntax": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@qi/base": ["./lib/base/src/index.ts"],
      "@qi/base/*": ["./lib/base/src/*"],
      "@qi/core": ["./lib/core/src/index.ts"],
      "@qi/core/*": ["./lib/core/src/*"]
    }
  },
  "include": ["lib/base/src/**/*", "lib/core/src/**/*", "lib/tests/**/*", "app/**/*"],
  "exclude": ["node_modules", "dist"]
}
