{
  "name": "@qi/base",
  "version": "2.0.0",
  "description": "QiCore Foundation Base - Mathematical foundation types with Result<T> monadic error handling",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "dev": "bun tsup --watch",
    "build": "bun tsup",
    "test": "bun vitest run",
    "test:watch": "bun vitest",
    "test:coverage": "bun vitest run --coverage",
    "test:properties": "bun vitest run --config ../../vitest.properties.config.ts",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "typecheck": "tsc --noEmit --pretty",
    "clean": "bun rimraf dist",
    "check": "bun run typecheck && bun run format:check && bun run lint && bun run test",
    "prepublishOnly": "bun run clean && bun run check && bun run build"
  },
  "keywords": [
    "qicore",
    "foundation",
    "result",
    "error-handling",
    "monad",
    "functor",
    "functional-programming",
    "typescript",
    "mathematical-types"
  ],
  "author": "Qi Platform",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/qi-platform/qi-v2-qicore.git",
    "directory": "typescript/packages/base"
  },
  "bugs": {
    "url": "https://github.com/qi-platform/qi-v2-qicore/issues"
  },
  "homepage": "https://github.com/qi-platform/qi-v2-qicore/tree/main/typescript/packages/base",
  "files": ["dist"],
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/qi-platform"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@fast-check/vitest": "^0.2.2",
    "@types/node": "^20.19.8",
    "@vitest/coverage-v8": "^1.6.1",
    "bun-types": "^1.2.18",
    "fast-check": "^3.23.2",
    "rimraf": "^5.0.10",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^1.6.1"
  }
}
