{
  "name": "@qi/core",
  "version": "2.0.0",
  "description": "QiCore Foundation Core - Infrastructure services (Config, Logger, Cache) with Result<T> integration",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "dev": "bun tsup --watch",
    "build": "bun tsup",
    "test": "bun vitest run",
    "test:watch": "bun vitest",
    "test:coverage": "bun vitest run --coverage",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "typecheck": "tsc --noEmit --pretty",
    "clean": "bun rimraf dist",
    "check": "bun run typecheck && bun run format:check && bun run lint && bun run test",
    "prepublishOnly": "bun run clean && bun run check && bun run build"
  },
  "keywords": [
    "qicore",
    "foundation",
    "configuration",
    "logger",
    "cache",
    "infrastructure",
    "typescript"
  ],
  "author": "Qi Platform",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/qi-platform/qi-v2-qicore.git",
    "directory": "typescript/packages/core"
  },
  "bugs": {
    "url": "https://github.com/qi-platform/qi-v2-qicore/issues"
  },
  "homepage": "https://github.com/qi-platform/qi-v2-qicore/tree/main/typescript/packages/core",
  "files": ["dist"],
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/qi-platform"
  },
  "dependencies": {
    "@qi/base": "workspace:*",
    "dotenv": "^16.6.1",
    "eventemitter3": "^5.0.1",
    "ioredis": "^5.6.1",
    "json-schema-to-zod": "^2.6.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "smol-toml": "^1.4.1",
    "yaml": "^2.8.0",
    "zod": "^4.0.0",
    "zod-config": "^1.2.0",
    "zod-from-json-schema": "^0.5.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.19.8",
    "@types/pino": "^7.0.5",
    "@vitest/coverage-v8": "^1.6.1",
    "bun-types": "^1.2.18",
    "rimraf": "^5.0.10",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "vitest": "^1.6.1"
  }
}
