{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "files": {
    "ignore": ["dist/**", "coverage/**", "temp/**"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedImports": "error",
        "noUnusedVariables": "off",
        "useExhaustiveDependencies": "warn"
      },
      "style": {
        "useConst": "error",
        "useTemplate": "warn",
        "noNonNullAssertion": "off",
        "noUselessElse": "warn",
        "noUnusedTemplateLiteral": "warn"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noConfusingVoidType": "error",
        "noArrayIndexKey": "warn"
      },
      "complexity": {
        "noStaticOnlyClass": "off",
        "noBannedTypes": "off",
        "noForEach": "warn",
        "useOptionalChain": "warn"
      }
    },
    "ignore": [
      "lib/core/src/logger.ts",
      "lib/cli/src/frameworks/hybrid/HybridCLIFramework.ts",
      "lib/cli/src/frameworks/ink/components/InputBox.tsx",
      "lib/cli/src/frameworks/readline/ReadlineInputManager.ts",
      "lib/cli/src/frameworks/readline/ReadlineStreamRenderer.ts",
      "lib/cli/src/frameworks/readline/ReadlineModeRenderer.ts",
      "lib/amsg/src/impl/QiAsyncMessageQueue.ts",
      "lib/cli/src/container/CLIContainer.ts",
      "lib/cli/src/frameworks/ink/components/PermissionDialog.tsx",
      "lib/cli/src/impl/simple-command-handler.ts",
      "lib/cli/src/impl/MessageDrivenCLI.ts",
      "lib/cli/src/frameworks/ink/InkCLIFramework.tsx"
    ]
  },
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "asNeeded"
    }
  }
}
