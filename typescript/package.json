{
  "name": "@qi/qicore-foundation",
  "version": "4.0.0",
  "description": "QiCore v4.0 Foundation - Mathematical foundation types and infrastructure services",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs", 
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./base": {
      "types": "./dist/base/index.d.ts",
      "import": "./dist/base/index.mjs",
      "require": "./dist/base/index.js"
    },
    "./core": {
      "types": "./dist/core/index.d.ts",
      "import": "./dist/core/index.mjs",
      "require": "./dist/core/index.js"
    }
  },
  "scripts": {
    "dev": "bun run src/index.ts",
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "build:watch": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:properties": "vitest run tests/properties/",
    "bench": "vitest bench",
    "format": "biome check . --write",
    "format:check": "biome check .",
    "lint": "biome lint .",
    "typecheck": "tsc --noEmit",
    "docs": "typedoc src/index.ts --out docs/api",
    "clean": "rimraf dist docs/api",
    "check": "bun run typecheck && bun run format && bun run test",
    "prepublishOnly": "bun run build && bun run test && bun run format"
  },
  "keywords": [
    "qicore",
    "foundation",
    "result",
    "error-handling",
    "monad",
    "functional-programming",
    "configuration",
    "logging",
    "caching",
    "typescript"
  ],
  "author": "Qi Platform",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/qi-platform/qi-v2-qicore.git",
    "directory": "typescript"
  },
  "bugs": {
    "url": "https://github.com/qi-platform/qi-v2-qicore/issues"
  },
  "homepage": "https://github.com/qi-platform/qi-v2-qicore/tree/main/typescript",
  "files": [
    "dist",
    "README.md",
    "CHANGELOG.md"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "yaml": "^2.3.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.0",
    "bun-types": "^1.1.0",
    "fast-check": "^3.15.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/qi-platform"
  }
}