{
  "name": "@qi/qicore-foundation",
  "version": "0.3.2",
  "description": "QiCore Foundation - TypeScript implementation of mathematical foundation types (qi/base)",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./base": {
      "types": "./dist/base.d.ts",
      "import": "./dist/base.js",
      "require": "./dist/base.cjs"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "build:watch": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:properties": "vitest run --config vitest.properties.config.ts",
    "biome": "biome",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "typecheck": "tsc --noEmit",
    "clean": "rimraf dist",
    "check": "bun run typecheck && bun run format:check && bun run lint && bun run test",
    "prepublishOnly": "bun run clean && bun run check && bun run build",
    "docs": "typedoc src/index.ts --out docs/api"
  },
  "keywords": [
    "qicore",
    "foundation",
    "result",
    "error-handling",
    "monad",
    "functor",
    "functional-programming",
    "typescript",
    "mathematical-types"
  ],
  "author": "Qi Platform",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/qi-platform/qi-v2-qicore.git",
    "directory": "typescript"
  },
  "bugs": {
    "url": "https://github.com/qi-platform/qi-v2-qicore/issues"
  },
  "homepage": "https://github.com/qi-platform/qi-v2-qicore/tree/main/typescript",
  "files": ["dist", "docs/typescript.impl.proposal.md"],
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/qi-platform"
  },
  "dependencies": {},
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^20.10.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@fast-check/vitest": "^0.2.1",
    "bun-types": "^1.1.0",
    "fast-check": "^3.15.0",
    "rimraf": "^5.0.5",
    "tsup": "^8.0.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.3.0",
    "vitest": "^1.0.0"
  }
}
