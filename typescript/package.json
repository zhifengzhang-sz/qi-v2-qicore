{
  "name": "qicore-workspace",
  "version": "2.2.0",
  "private": true,
  "workspaces": ["lib/base", "lib/core", "lib/cli", "lib/amsg", "app/*"],
  "description": "QiCore Foundation - Workspace root for @qi/base, @qi/core, @qi/cli, and @qi/amsg packages",
  "type": "module",
  "scripts": {
    "build": "bun --filter='@qi/*' run build",
    "clean": "bun --filter='@qi/*' run clean",
    "test": "bun vitest run",
    "test:watch": "bun vitest",
    "test:coverage": "bun vitest run --coverage",
    "test:properties": "bun vitest run --config vitest.properties.config.ts",
    "biome": "biome",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "lint": "biome lint .",
    "typecheck": "tsc --noEmit --pretty",
    "check": "bun run typecheck && bun --filter='@qi/*' run typecheck && bun run format:check && bun run lint && bun run test",
    "build:check": "bun run clean && bun run build && bun run check"
  },
  "keywords": [
    "qicore",
    "foundation",
    "result",
    "error-handling",
    "monad",
    "functor",
    "functional-programming",
    "typescript",
    "mathematical-types",
    "configuration",
    "logger",
    "cache",
    "infrastructure",
    "cli",
    "messaging",
    "async-queue"
  ],
  "author": "Qi Platform",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/qi-platform/qi-v2-qicore.git",
    "directory": "typescript"
  },
  "bugs": {
    "url": "https://github.com/qi-platform/qi-v2-qicore/issues"
  },
  "homepage": "https://github.com/qi-platform/qi-v2-qicore/tree/main/typescript",
  "files": ["dist", "docs/typescript.impl.proposal.md"],
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/qi-platform"
  },
  "dependencies": {
    "dotenv": "^16.6.1",
    "eventemitter3": "^5.0.1",
    "ioredis": "^5.6.1",
    "json-schema-to-zod": "^2.6.1",
    "pino": "^9.7.0",
    "pino-pretty": "^13.0.0",
    "smol-toml": "^1.4.1",
    "yaml": "^2.8.0",
    "zod": "^4.1.5",
    "zod-config": "^1.2.0",
    "zod-from-json-schema": "^0.5.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@fast-check/vitest": "^0.2.2",
    "@types/node": "^20.19.8",
    "@types/pino": "^7.0.5",
    "@vitest/coverage-v8": "^1.6.1",
    "bun-types": "^1.2.18",
    "dts-bundle-generator": "^9.5.1",
    "fast-check": "^3.23.2",
    "rimraf": "^5.0.10",
    "tsup": "^8.5.0",
    "typedoc": "^0.25.13",
    "typescript": "^5.8.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^1.6.1"
  }
}
